#include<bits/stdc++.h>
using namespace std;
#define ll long long 
int main()
{
	 ll n,a,b,sum=0,res=0;
		cin>>n;
		// ll v[n];
	
		vector<pair<ll,ll>>v(n);
	for(ll i=0;i<n;i++)
			{cin>>a>>b;
				v[i]=make_pair(a,b);}
		
		sort(v.begin(),v.end());
		for(ll i=0;i<n;i++)
		{sum+=v[i].first;
			res+=(v[i].second)-sum;

		}
		cout<<res<<endl;
		


	return 0;

}
