#include<bits/stdc++.h>
using namespace std;
#define ll long long 
int main()
{

	 ll n,i,j,y=0;
		cin>>n;
		ll a[n];
		string s;
		
	for( i=0;i<n;i++)
			cin>>a[i];
		i=0;
		j=(n-1);
		if(a[i]<a[j])
		{ s+='L';
		y=a[i];
		i++;
		}
		else
			{s+='R';
		y=a[j];
		j--;

			}
			
			while(i<=j)
			{ 
				if((a[i]>y)&&(a[j]>y))
				{
				if(a[j]<a[i])
				{
					s+='R';
					y=a[j];
					j--;

				}
				else 
				{
					s+='L';
					y=a[i];
					i++;
				}
			}
			else if(y<a[i])
			{
				s+='L';
				y=a[i];
				i++;
			}

				else if(y<a[j])
				{
					s+='R';
					y=a[j];
					j--;
				}
				else
					{break;}
			}


cout<<s.length()<<endl<<s<<endl;
		
		


		


	return 0;

}
